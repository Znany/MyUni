<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="3"
        android:padding="5dp"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_item_label"
            android:text="Algorytmy i Struktury danych"
            android:textColor="@color/blue_primary"
            android:textSize="18sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/widget_item_bottom_label"
            android:textColor="@color/blue_primary"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="30dp"
            android:layout_width="match_parent">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/widget_item_start"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/item_subject_secondary_color"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </TextView>

        <TextView
            android:layout_weight="1"
            android:id="@+id/widget_item_end"
            android:textColor="@color/item_subject_secondary_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </TextView>
    </LinearLayout>

</LinearLayout>